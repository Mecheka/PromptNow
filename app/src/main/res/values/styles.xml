<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/textColorSingin</item>
    </style>

    <style name="LoginTextLayout" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/graylith</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/graylith</item>
        <item name="colorControlNormal">@color/graylith</item>
        <item name="colorControlActivated">@color/graylith</item>

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/loginBG</item>
        <item name="android:textColorPrimary">@color/tabOR</item>
        <item name="android:background">@color/dialogBG</item>

    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/loginBG</item>
        <item name="colorAccent">@color/loginBG</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="usertextcolor" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/loginBG</item>

    </style>
    
    <style name="mySpinnerItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">

        <item name="android:textColor">@color/graylith</item>

    </style>

</resources>
